  <br> 
  <button onclick="quantidademaiores()">Ver quantidade de pessoas maiores de 18</button> 
  <button onclick="quantidademenores()">Ver quantidade de pessoas menores de 18</button> 
  <script type="text/javascript">

        function quantidademaiores(){
            maiordeidade=0;
            var n1 = parseFloat(document.getElementById("n1").value);
            var n2 = parseFloat(document.getElementById("n2").value);
            var n3 = parseFloat(document.getElementById("n3").value);
            var n4= parseFloat(document.getElementById("n4").value);
            var n5 = parseFloat(document.getElementById("n5").value);

            if(n1>=18){
                maiordeidade+=1
            }
            if(n2>=18){
                maiordeidade+=1
            }
            if(n3>=18){
                maiordeidade+=1
            }
            if(n4>=18){
                maiordeidade+=1
            }
            if(n5>=18){
                maiordeidade+=1
            }
            document.write("A quantidade de pessoas maiores de idade é: "+maiordeidade)
        }
       
        function quantidademenores(){
            menordeidade=0;
            var n1 = parseFloat(document.getElementById("n1").value);
            var n2 = parseFloat(document.getElementById("n2").value);
            var n3 = parseFloat(document.getElementById("n3").value);
            var n4= parseFloat(document.getElementById("n4").value);
            var n5 = parseFloat(document.getElementById("n5").value);

            if(n1<18){
                menordeidade +=1
            }
            if(n2<18){
                menordeidade +=1
            }
            if(n3<18){
                menordeidade +=1
            }
            if(n4<18){
                menordeidade +=1
            }
            if(n5<18){
                menordeidade +=1
            }
           document.write("A quantidade de pessoas menores de idade é: "+menordeidade)
        } 

